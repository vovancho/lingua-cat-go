{
    "swagger": "2.0",
    "info": {
        "title": "Документация сервиса Dictionary",
        "contact": {},
        "version": "1.0"
    },
    "host": "api.lingua-cat-go.localhost",
    "basePath": "/dictionary",
    "paths": {
        "/v1/dictionary": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Создает новый словарь с предоставленными данными",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Dictionary"
                ],
                "summary": "Создать новый словарь",
                "parameters": [
                    {
                        "description": "Данные словаря",
                        "name": "dictionary",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.DictionaryStoreRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Словарь создан",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/response.APIResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/http.DictionaryData"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "Некорректный запрос",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    }
                }
            }
        },
        "/v1/dictionary/{id}": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Получает словарь по указанному идентификатору",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Dictionary"
                ],
                "summary": "Получить словарь по ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID словаря",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Словарь найден",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/response.APIResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/http.DictionaryData"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "404": {
                        "description": "Словарь не найден",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Удаляет словарь по указанному идентификатору",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Dictionary"
                ],
                "summary": "Удалить словарь",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID словаря",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Словарь удален",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    },
                    "404": {
                        "description": "Словарь не найден",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    }
                }
            }
        },
        "/v1/dictionary/{id}/name": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Изменяет имя словаря по указанному идентификатору",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Dictionary"
                ],
                "summary": "Изменить имя словаря",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "ID словаря",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Новое имя словаря",
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/http.DictionaryChangeNameRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Имя словаря обновлено",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/response.APIResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/http.DictionaryData"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "Некорректный запрос",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    },
                    "404": {
                        "description": "Словарь не найден",
                        "schema": {
                            "$ref": "#/definitions/response.APIResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.Dictionary": {
            "type": "object",
            "required": [
                "lang",
                "name",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "integer"
                },
                "lang": {
                    "$ref": "#/definitions/domain.DictionaryLang"
                },
                "name": {
                    "type": "string",
                    "minLength": 2
                },
                "sentences": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.Sentence"
                    }
                },
                "translations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.Translation"
                    }
                },
                "type": {
                    "$ref": "#/definitions/domain.DictionaryType"
                }
            }
        },
        "domain.DictionaryLang": {
            "type": "string",
            "enum": [
                "ru",
                "en"
            ],
            "x-enum-varnames": [
                "RuDictionary",
                "EnDictionary"
            ]
        },
        "domain.DictionaryType": {
            "type": "integer",
            "enum": [
                1,
                2,
                3,
                4
            ],
            "x-enum-varnames": [
                "SimpleDictionary",
                "PhrasalVerbDictionary",
                "IrregularVerbDictionary",
                "PhraseDictionary"
            ]
        },
        "domain.Sentence": {
            "type": "object",
            "required": [
                "text_en",
                "text_ru"
            ],
            "properties": {
                "text_en": {
                    "type": "string",
                    "minLength": 5
                },
                "text_ru": {
                    "type": "string",
                    "minLength": 5
                }
            }
        },
        "domain.Translation": {
            "type": "object",
            "properties": {
                "dictionary": {
                    "$ref": "#/definitions/domain.Dictionary"
                }
            }
        },
        "http.DictionaryChangeNameRequest": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 2
                }
            }
        },
        "http.DictionaryData": {
            "type": "object",
            "properties": {
                "dictionary": {
                    "$ref": "#/definitions/domain.Dictionary"
                }
            }
        },
        "http.DictionaryStoreRequest": {
            "type": "object",
            "required": [
                "lang",
                "name",
                "translations",
                "type"
            ],
            "properties": {
                "lang": {
                    "$ref": "#/definitions/domain.DictionaryLang"
                },
                "name": {
                    "type": "string",
                    "minLength": 2
                },
                "sentences": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "text_en",
                            "text_ru"
                        ],
                        "properties": {
                            "text_en": {
                                "type": "string",
                                "minLength": 5
                            },
                            "text_ru": {
                                "type": "string",
                                "minLength": 5
                            }
                        }
                    }
                },
                "translations": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "lang",
                            "name",
                            "type"
                        ],
                        "properties": {
                            "lang": {
                                "$ref": "#/definitions/domain.DictionaryLang"
                            },
                            "name": {
                                "type": "string",
                                "minLength": 2
                            },
                            "type": {
                                "$ref": "#/definitions/domain.DictionaryType"
                            }
                        }
                    }
                },
                "type": {
                    "$ref": "#/definitions/domain.DictionaryType"
                }
            }
        },
        "response.APIResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
